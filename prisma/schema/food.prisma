enum Unit {
  g
  kg
  ml
  l
  tbsp
  tsp
  piece
}


enum StorageType {
  pantry
  fridge
  freezer
}

enum IngredientType {
  food
  drink
  condiment
  cleaning
  household
}

model Tag {
  id String @id @default(cuid())
  name String
  color String

  ingredients Ingredient[]
  recipes Recipe[]

  user User @relation(fields: [userId], references: [id])
  userId String
}


model StoreLink {
  id String @id @default(cuid())
  url String
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String
}



model Category {
  id String @id @default(cuid())
  name String @unique
  color String
  icon String? // Optional icon identifier (e.g., "meat", "fish", "veg")
  
  ingredients ShopIngredient[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}