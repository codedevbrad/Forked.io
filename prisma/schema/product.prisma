enum Retailer {
  TESCO
  MORRISONS
  SAINSBURYS
  ASDA
}
 

model ShopProduct {
  id            String     @id @default(cuid())
  retailer      Retailer
  productName   String     // "Finest Chicken Tikka Masala", "Oranges 6 Pack"
  url           String?
  price         Int?  // optional, in pence/cents
  size          Int?  // optional, in grams/ml/etc
  unit          Unit?
  imageUrl      String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model ShopIngredient {
  id String @id @default(cuid())
  name String // display name (Ingredient has no name; use this via relation)
  type IngredientType
  storageType StorageType?
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId String? 

  ingredient Ingredient?  // back-relation (optional because FK is on Ingredient)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}